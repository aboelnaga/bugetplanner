{
  "name": "budgrt-vue",
  "version": "1.0.0",
  "description": "Personal Budget Management App",
  "scripts": {
    "dev": "npm run lint:errors && vite",
    "dev:watch": "concurrently \"npm run lint:watch\" \"vite\"",
    "dev:eslint-watch": "concurrently \"eslint . --ext .vue,.js,.ts --watch\" \"vite\"",
    "build": "npm run lint:errors && vite build",
    "preview": "vite preview",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:simple": "playwright test --config=playwright.config.simple.ts",
    "test:no-server": "SKIP_WEBSERVER=true playwright test",
    "lint": "eslint . --ext .vue,.js,.ts",
    "lint:check": "eslint . --ext .vue,.js,.ts --max-warnings 0",
    "lint:errors": "eslint . --ext .vue,.js,.ts --quiet",
    "lint:watch": "nodemon --watch src --ext vue,js,ts --exec \"npm run lint:errors\"",
    "lint:fix": "eslint . --ext .vue,.js,.ts --fix",
    "lint:warn": "eslint . --ext .vue,.js,.ts --max-warnings 50",
    "dev:no-lint": "vite",
    "build:no-lint": "vite build"
  },
  "dependencies": {
    "@primevue/themes": "^4.3.7",
    "@supabase/supabase-js": "^2.50.5",
    "chart.js": "^4.4.0",
    "date-fns": "^2.30.0",
    "lucide-vue-next": "^0.284.0",
    "moment-hijri": "^3.0.0",
    "pinia": "^2.1.6",
    "primeflex": "^4.0.0",
    "primeicons": "^7.0.0",
    "primevue": "^4.3.7",
    "tailwindcss-primeui": "^0.6.1",
    "vue": "^3.3.4",
    "vue-chartjs": "^5.2.0",
    "vue-currency-input": "^3.2.1",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@playwright/test": "^1.54.2",
    "@primevue/auto-import-resolver": "^4.3.7",
    "@types/node": "^20.5.9",
    "@vitejs/plugin-vue": "^4.3.4",
    "autoprefixer": "^10.4.15",
    "eslint": "^9.35.0",
    "eslint-plugin-vue": "^10.4.0",
    "globals": "^16.4.0",
    "postcss": "^8.4.29",
    "prettier": "^3.6.2",
    "sass": "^1.90.0",
    "supabase": "^2.30.4",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2",
    "unplugin-vue-components": "^29.0.0",
    "vite": "^4.4.9",
    "vue-tsc": "^1.8.8"
  }
}
